{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "es2017",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/obsidian"
    ]
  },  
  "include": [
    "**/*.ts"
  ]
}
